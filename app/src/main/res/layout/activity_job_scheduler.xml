<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/onstart_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/onstop_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/task_params"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/delay_time"
                android:hint="设置delay时间"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/duration_time"
                android:hint="setPeriodic周期"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/deadline_time"
                android:layout_width="match_parent"
                android:hint="设置最长的截止时间"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/checkbox_unmetered"
                android:hint="设置builder中的是否有WiFi连接"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/checkbox_any"
                android:text="设置builder中的是否有网络即可"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/checkbox_charging"
                android:layout_width="match_parent"
                android:text=" 设置builder中的是否需要充电"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/checkbox_idle"
                android:text="设置builder中的是否设备空闲"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_start_job"
                android:layout_width="match_parent"
                android:text="点击开始任务的按钮"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_stop_job"
                android:layout_width="match_parent"
                android:text="点击结束所有任务的按钮"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>